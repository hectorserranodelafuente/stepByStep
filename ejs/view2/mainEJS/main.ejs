<style>

@media (min-width: 768px) {
    
    body{
        margin: 0; 
        height: 100vh; 
        display: flex; 
        justify-content: center; 
        align-items: center;
    }

    .centered-div{
        border: solid 1px;
        padding:20px;
        width:400px;
        -webkit-box-shadow: 10px 10px 5px 0px rgba(153,153,153,1);
        -moz-box-shadow: 10px 10px 5px 0px rgba(153,153,153,1);
        box-shadow: 10px 10px 5px 0px rgba(153,153,153,1);
    }

    .centered-div-in{
        background-color:rgb(198, 198, 198);
        padding:10px;
    }

    input{
        float:right;
    }

    button{
        
        font-weight:600;
        cursor:pointer;
        border-radius:10px;
        padding:10px;
        background-color:#1c3be8;
        color:#fff;
        border:solid 0x;
        text-align:center;width:200px;

    }
    button:hover{
        background-color:#00051e;

    }
    
    .showed{
        display: block
    }

    .hidden{
        display: none
    }

    .strong{
        font-weight:600;
    }

    .strong-gray{
        color:gray;
    }
    .formatExample{
        text-align:center;
        position:relative;
        top:0px;
    }
    .phoneNumber{
        width:50%;
        float:left;
    }
    .twoFACheck-label{
        opacity:1;
        width:100%;
        float:left;
    }
    .twoFACheck-check{
        opacity:1;
        width:100%;
        float:left;
    }
}

@media (max-width: 768px) {
    
    

    body{
        margin: 0; 
        height: 100vh; 
        display: flex; 
        justify-content: center; 
        align-items: center;
    }

    .centered-div{
        border: solid 1px;
        padding:20px;
        width: 100%;
        height: 100vh;
        -webkit-box-shadow: 10px 10px 5px 0px rgba(153,153,153,1);
        -moz-box-shadow: 10px 10px 5px 0px rgba(153,153,153,1);
        box-shadow: 10px 10px 5px 0px rgba(153,153,153,1);
        padding: 20px;
        width:100%;
	    height:100%;
    }

    .centered-div-in{
        background-color:#fff;
        padding:10px;
        width:100%;
	    height: 100vh;
    }

    input{
        float: right;
        width: 100%;
        height: 50px;
        font-size: 2.5em;
        border:solid 1px;
    }

    label{
    	font-size: 3em;
	}

    button{
        
        font-weight:600;
        cursor:pointer;
        border-radius:10px;
        padding:10px;
        background-color:#1c3be8;
        color:#fff;
        border:solid 0x;
        text-align:center;
        font-size:2.5em;
        width: 100%;
        height: 100px;

    }
    button:hover{
        background-color:#00051e;

    }
    
    .showed{
        display: block
    }

    .hidden{
        display: none
    }

    .strong{
        font-weight:600;
    }

    .strong-gray{
        color:gray;
    }

    .formatExample{
        text-align:center;
        position:relative;
        top:0px;
    }

    .phoneNumber{
        width:100%;
        float:left;
    }

    .twoFACheck-label{
        opacity:1;
        width:90%;
        float:left;
    }

    .twoFACheck-check{
        opacity:1;
        width:10%;
        float:left;
    }
}

</style>
<body>
    <div class="centered-div">
    <button id="startPage" onclick="goToStartPage()">Back to start page</button>
    <br><br>
